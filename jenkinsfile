pipeline {
  agent any

  environment {
    NODE_ENV = 'production'
  }

  stages {
    stage('Install Frontend Dependencies') {
      steps {
        dir('frontend') {
          sh 'npm install'
        }
      }
    }

    stage('Build Frontend') {
      steps {
        dir('frontend') {
          sh 'npm run build'
        }
      }
    }

    stage('Install Backend Dependencies') {
      steps {
        dir('backend') {
          sh 'npm install'
        }
      }
    }

    stage('Run Backend App') {
      steps {
        dir('backend') {
          sh 'nohup node server.js &'
        }
      }
    }
  }
}
